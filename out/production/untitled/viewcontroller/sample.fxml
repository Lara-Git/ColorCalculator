<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="1.0" vgap="1.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewcontroller.Controller">
    <columnConstraints>
        <ColumnConstraints maxWidth="-Infinity" minWidth="-Infinity" />
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" />
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" />
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" />
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" />
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" />
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" />
    </rowConstraints>
    <children>
        <Button fx:id="btn_RedP" mnemonicParsing="false" onMouseClicked="#hdl_Relative" prefHeight="60.0" prefWidth="150.0" text="+10" GridPane.columnIndex="1" />
        <Button fx:id="btn_RedM" mnemonicParsing="false" onMouseClicked="#hdl_Relative" prefHeight="60.0" prefWidth="150.0" text="-10" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button fx:id="btn_GreenP" mnemonicParsing="false" onMouseClicked="#hdl_Relative" prefHeight="60.0" prefWidth="150.0" text="+10" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button fx:id="btl_GreenM" mnemonicParsing="false" onMouseClicked="#hdl_Relative" prefHeight="60.0" prefWidth="150.0" text="-10" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Button fx:id="btn_BlueP" mnemonicParsing="false" onMouseClicked="#hdl_Relative" prefHeight="60.0" prefWidth="150.0" text="+10" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Button fx:id="btn_BlueM" mnemonicParsing="false" onMouseClicked="#hdl_Relative" prefHeight="60.0" prefWidth="150.0" text="-10" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <TextField fx:id="txt_Red" onKeyReleased="#hdl_Absolute" prefHeight="60.0" prefWidth="150.0" GridPane.rowIndex="1" />
        <TextField fx:id="txt_Green" onKeyReleased="#hdl_Absolute" prefHeight="60.0" prefWidth="150.0" GridPane.rowIndex="3" />
        <TextField fx:id="txt_Blue" onKeyReleased="#hdl_Absolute" prefHeight="60.0" prefWidth="150.0" GridPane.rowIndex="5" />
        <Label alignment="BOTTOM_LEFT" prefHeight="13.0" prefWidth="150.0" text=" Red">
            <padding>
                <Insets left="5.0" />
            </padding></Label>
        <Label alignment="BOTTOM_LEFT" prefHeight="0.0" prefWidth="150.0" text="Green" GridPane.rowIndex="2">
            <padding>
                <Insets left="5.0" />
            </padding></Label>
        <Label alignment="BOTTOM_LEFT" prefHeight="0.0" prefWidth="150.0" text="Blue" GridPane.rowIndex="4">
            <padding>
                <Insets left="5.0" />
            </padding></Label>
        <Button fx:id="btn_colorView" mnemonicParsing="false" prefHeight="182.0" prefWidth="150.0" text="View Color" GridPane.columnIndex="2" GridPane.rowSpan="3" />
        <TextField fx:id="txt_hexValue" prefHeight="182.0" prefWidth="150.0" text="Hex:" GridPane.columnIndex="2" GridPane.rowIndex="3" GridPane.rowSpan="3" />
    </children>
</GridPane>
